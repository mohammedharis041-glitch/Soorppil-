        document.getElementById('downloadBtn').addEventListener('click', function() {
            // Create a fake APK download
            const apkFileName = 'Zain_Electronics_Repair_App_v1.0.apk';
            
            // Create a temporary download link
            const link = document.createElement('a');
            link.href = 'https://example.com/zain-electronics.apk'; // This would be a real APK in production
            
            // For this demo, we'll create a dummy file
            const blob = new Blob(['This is a simulation. In a real implementation, this would be the APK file.'], {type: 'application/vnd.android.package-archive'});
            link.href = URL.createObjectURL(blob);
            
            link.download = apkFileName;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Show success message
            alert('APK download started! In a real implementation, this would be the actual app file.');
        });
